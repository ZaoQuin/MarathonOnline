<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Nền của thanh tiến trình -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" /> <!-- Bo tròn góc -->
            <solid android:color="@color/light_main_color" /> <!-- Màu nền mặc định -->
        </shape>
    </item>

    <!-- Thanh tiến trình đã hoàn thành -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="10dp" /> <!-- Bo tròn góc -->
                <solid android:color="@color/main_color" /> <!-- Màu chính -->
            </shape>
        </clip>
    </item>
</layer-list>
