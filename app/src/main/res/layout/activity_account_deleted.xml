<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".ui.view.activity.AccountDeletedActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/main_color"
            android:alpha="0.7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/accountDeletedMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản của bạn đã bị xóa!"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="20dp"/>

            <TextView
                android:id="@+id/secondaryMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vui lòng đăng nhập bằng tài khoản khác."
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingBottom="40dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginAgainButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập lại"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/my_secondary"
                app:cornerRadius="16dp"/>

        </LinearLayout>

    </RelativeLayout>

</layout>
