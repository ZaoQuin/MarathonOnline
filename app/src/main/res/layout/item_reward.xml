<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_16sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_12sdp"
            android:gravity="center_vertical">

            <!-- Icon hoặc hình ảnh đại diện phần thưởng -->
            <ImageView
                android:id="@+id/rewardIcon"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_reward_2_"
                android:contentDescription="Reward Icon"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/circle_background_gray" />

            <!-- Phần nội dung -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Tên phần thưởng -->
                <TextView
                    android:id="@+id/rewardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên Phần Thưởng"
                    android:textColor="@color/dark_main_color"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginBottom="@dimen/_4sdp" />

                <!-- Mô tả phần thưởng -->
                <TextView
                    android:id="@+id/rewardDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả ngắn về phần thưởng sẽ xuất hiện ở đây."
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_14sdp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginBottom="@dimen/_6sdp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
