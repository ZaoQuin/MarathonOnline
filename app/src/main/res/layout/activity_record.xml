<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBEBEB"
        android:orientation="vertical">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">

            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ghi Tiến Trình"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

        </Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/background_radius_45sdp_white"
            android:clipChildren="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/background_radius_12sdp_light_green"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="10 km"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        app:drawableStartCompat="@drawable/ic_distance" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/background_radius_12sdp_light_green"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="00:00:00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        app:drawableStartCompat="@drawable/ic_time" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/background_radius_12sdp_light_green"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="10 km/h"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        app:drawableStartCompat="@drawable/ic_speed" />

                </LinearLayout>

            </LinearLayout>


            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_100sdp"
                android:max="100"
                android:progress="10"
                android:rotation="270"
                android:translationX="-180dp"
                android:translationY="@dimen/_150sdp"
                android:progressDrawable="@drawable/progress_bar" />

            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/button_circle_green"
                android:padding="@dimen/_10sdp"
                android:paddingStart="@dimen/_13sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_play" />

            <ImageButton
                android:id="@+id/stop_button"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/button_circle_dark_green"
                android:padding="@dimen/_10sdp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_stop"
                android:visibility="gone"/>

        </FrameLayout>

    </LinearLayout>

</layout>