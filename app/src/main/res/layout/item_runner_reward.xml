<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        tools:context=".YourActivity">

        <LinearLayout
            android:id="@+id/rewardCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Reward Name -->
            <TextView
                android:id="@+id/rewardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reward Name"
                android:textColor="@color/main_color"
                android:textSize="20sp"/>

            <!-- Reward Description -->
            <TextView
                android:id="@+id/rewardDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description of the reward"
                android:textColor="@color/text_color"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/contestName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marathon 2024"
                android:textColor="@color/text_color"
                android:textSize="16sp"/>

            <!-- Reward Rank -->
            <TextView
                android:id="@+id/rewardRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rank: 1"
                android:textColor="@color/dark_main_color"
                android:textSize="18sp"/>

            <!-- Claim Button -->
            <Button
                android:id="@+id/claimButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_background_picker"
                android:padding="12dp"
                android:text="Claim"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="gone"/> <!-- Align button to the left -->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>
