<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageButton
                    android:id="@+id/button_back"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Chi tiết"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"
                    android:padding="@dimen/_5sdp"/>

            </Toolbar>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:tabMode="scrollable"
                app:tabGravity="fill" />

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_100sdp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/example_event" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/contestName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tên cuộc thi"
                            android:textColor="@color/dark_main_color"
                            android:textSize="@dimen/_20sdp"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/_15sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginEnd="3dp"
                                android:src="@drawable/ic_calendar" />

                            <TextView
                                android:id="@+id/raceDateTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:text="Thời gian: "
                                android:textColor="#888888"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginEnd="2dp" />


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:text="Ngày bắt đầu: "
                                android:textColor="#888888"
                                android:textSize="15dp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/startDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:text="ngày bắt đầu"
                                android:textColor="#888888"
                                android:textSize="15dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:layout_marginEnd="2dp" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:text="Ngày kết thúc:"
                                android:textColor="#888888"
                                android:textSize="15dp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/endDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:text="ngày kết thúc"
                                android:textColor="#888888"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/section_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/section_details_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông tin chi tiết"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/_5ssp"/>

                        <TextView
                            android:id="@+id/content_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/section_deadline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/section_deadline_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hạn đăng ký"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/_5ssp"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="@drawable/background_radius_12sdp_light_green">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/daysTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00"
                                    android:textSize="20sp"
                                    android:textColor="@color/main_color"
                                    android:gravity="center"/>

                                <TextView
                                    android:text="Ngày"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_color"
                                    android:gravity="center"/>
                            </LinearLayout>

                            <!-- Cặp TextView cho giờ -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/hoursTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00"
                                    android:textSize="20sp"
                                    android:textColor="@color/main_color"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Giờ"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_color"
                                    android:gravity="center"/>
                            </LinearLayout>

                            <!-- Cặp TextView cho phút -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/minutesTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00"
                                    android:textSize="20sp"
                                    android:textColor="@color/main_color"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Phút"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_color"
                                    android:gravity="center"/>
                            </LinearLayout>

                            <!-- Cặp TextView cho giây -->
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/secondsTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00"
                                    android:textSize="20sp"
                                    android:textColor="@color/main_color"
                                    android:gravity="center"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Giây"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_color"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/section_rewards"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/section_rewards_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Giải thưởng"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/_5ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rewards"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/section_rules"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/section_rules_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quy định cuộc thi"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/_5ssp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rules"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/section_leader_board"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/section_leader_board_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_15ssp"
                            android:text="Xếp hạng"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_radius_12sdp_light_green"
                            android:padding="@dimen/_10sdp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_200sdp">

                                <LinearLayout
                                    android:id="@+id/container_top2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:background="@drawable/background_leader_board_item"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/_20sdp"
                                    android:paddingTop="@dimen/_30sdp"
                                    android:paddingRight="@dimen/_20sdp"
                                    android:paddingBottom="@dimen/_30sdp"
                                    android:rotation="-3"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toStartOf="@+id/container_top1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="74dp"
                                        android:layout_height="83dp"
                                        android:src="@drawable/example_avatar" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Top 2" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/container_top1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/background_leader_board_item"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/_20sdp"
                                    android:paddingTop="@dimen/_30sdp"
                                    android:paddingRight="@dimen/_20sdp"
                                    android:paddingBottom="@dimen/_30sdp"
                                    android:rotation="3"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.2">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="@dimen/_60sdp"
                                        android:layout_height="@dimen/_60sdp"
                                        android:src="@drawable/example_avatar" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Top 1" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/container_top3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_15sdp"
                                    android:background="@drawable/background_leader_board_item"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/_20sdp"
                                    android:paddingTop="@dimen/_30sdp"
                                    android:paddingRight="@dimen/_20sdp"
                                    android:paddingBottom="@dimen/_32sdp"
                                    android:rotation="3"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toEndOf="@+id/container_top1"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.6">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_width="@dimen/_60sdp"
                                        android:layout_height="@dimen/_60sdp"
                                        android:src="@drawable/example_avatar" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Top 3" />
                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_6sdp"
                                android:layout_marginTop="@dimen/_146sdp"
                                android:layout_marginEnd="@dimen/_6sdp"
                                android:background="@drawable/background_light_grey_radius_12sdp"
                                android:orientation="vertical"
                                android:padding="@dimen/_20sdp">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/leaderBoards"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />


                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/section_organizational"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/section_organizational_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đơn vị tổ chức"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/_5ssp"/>

                        <TextView
                            android:id="@+id/organizationalName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tên đơn vị tổ chức" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số cuộc thi đã tổ chức: "
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/numberContest"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textStyle="italic" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email: "
                                android:textStyle="italic" />

                            <TextView
                                android:id="@+id/emailOrganizer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="contest@gmail.com"
                                android:textStyle="italic" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </ScrollView>

        </LinearLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/ic_fee" />

                    <TextView
                        android:id="@+id/fee_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100.000 đ" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnRegisterContest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_radius"
                    android:text="Đăng ký ngay"
                    android:textColor="@color/white" />

            </LinearLayout>
        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </RelativeLayout>

</layout>