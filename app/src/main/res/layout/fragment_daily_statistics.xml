<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto">

    <data></data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_light_grey_radius_12sdp">

        <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_light_grey_radius_12sdp"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/filter_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:clickable="true"
                android:clipToPadding="false"
                android:elevation="4dp"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:backgroundTint="@color/white"
                    android:padding="@dimen/_5sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/filter_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:drawablePadding="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:padding="10dp"
                    android:text="Hôm nay"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/background_border_grey_12sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/calogiesIcon"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp" />

                    <TextView
                        android:id="@+id/tvCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.00"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lượng calo"
                        android:textAlignment="center" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/background_border_grey_12sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_pace" />

                    <TextView
                        android:id="@+id/tvPace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.00 "
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhịp độ"
                        android:textAlignment="center" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/background_border_grey_12sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_distance__2_" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.00"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quãng Đường"
                        android:textAlignment="center" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/background_border_grey_12sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_step" />

                    <TextView
                        android:id="@+id/tvSteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.00 "
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số bước chân"
                        android:textAlignment="center" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/background_border_grey_12sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_speed__2_" />

                    <TextView
                        android:id="@+id/tvSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.00"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tốc độ"
                        android:textAlignment="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:layout_weight="1"
                    android:background="@drawable/background_border_grey_12sp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_time__2_" />

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.00"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian chạy"
                        android:textAlignment="center" />

                </LinearLayout>

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="1000dp"
                        android:layout_height="@dimen/_300sdp" />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_container"
            shimmer:shimmer_auto_start="true"
            shimmer:shimmer_duration="1500"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Shimmer Filter Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <View
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@color/shimmer_placeholder" />

                    <View
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:background="@color/shimmer_placeholder" />

                </LinearLayout>

                <!-- Shimmer Stats Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5ssp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border_grey_12sp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <View
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="60dp"
                            android:layout_height="18dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="80dp"
                            android:layout_height="14dp"
                            android:background="@color/shimmer_placeholder" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5ssp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border_grey_12sp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <View
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="60dp"
                            android:layout_height="18dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="80dp"
                            android:layout_height="14dp"
                            android:background="@color/shimmer_placeholder" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Shimmer Stats Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5ssp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border_grey_12sp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <View
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="60dp"
                            android:layout_height="18dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="100dp"
                            android:layout_height="14dp"
                            android:background="@color/shimmer_placeholder" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5ssp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border_grey_12sp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <View
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="60dp"
                            android:layout_height="18dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="90dp"
                            android:layout_height="14dp"
                            android:background="@color/shimmer_placeholder" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Shimmer Stats Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5ssp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border_grey_12sp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <View
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="60dp"
                            android:layout_height="18dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="95dp"
                            android:layout_height="14dp"
                            android:background="@color/shimmer_placeholder" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5ssp"
                        android:layout_weight="1"
                        android:background="@drawable/background_border_grey_12sp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_5sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_10sdp">

                        <View
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="60dp"
                            android:layout_height="18dp"
                            android:layout_marginBottom="3dp"
                            android:background="@color/shimmer_placeholder" />

                        <View
                            android:layout_width="105dp"
                            android:layout_height="14dp"
                            android:background="@color/shimmer_placeholder" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Shimmer Chart -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_placeholder" />

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>
    </RelativeLayout>
</layout>
