<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_margin="@dimen/_4sdp"
        android:radius="@dimen/_8sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp">

            <!-- Hình ảnh sự kiện -->
            <ImageView
                android:id="@+id/event_image"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/example_event"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/_8sdp"
                android:clipToOutline="true"
                android:outlineProvider="background"/>

            <!-- Nội dung văn bản -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/event_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:gravity="start">

                <!-- Tên cuộc thi -->
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên cuộc thi"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/dark_main_color"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <!-- Tên tổ chức -->
                <TextView
                    android:id="@+id/organizer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên tổ chức"
                    android:textStyle="italic"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/gray"
                    android:ellipsize="end"
                    android:maxLines="1"/>

            </LinearLayout>

            <!-- Nút chi tiết -->
            <ImageButton
                android:id="@+id/show_details_btn"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
