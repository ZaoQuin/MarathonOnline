<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minWidth="@dimen/_300sdp"
        android:padding="@dimen/_10sdp">

        <!-- Contest Name -->
        <TextView
            android:id="@+id/tvContestName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contest Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dark_main_color"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_background"
            android:padding="10dp"/>

        <!-- Contest Status -->
        <TextView
            android:id="@+id/tvContestStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contest Status"
            android:textColor="@color/gray"
            android:padding="10dp"/>

        <!-- Contest Dates -->
        <TextView
            android:id="@+id/tvContestDatesRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Date"
            android:textColor="@color/gray"
            android:padding="10dp"/>

        <!-- Completion Status -->
        <TextView
            android:id="@+id/tvCompletionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completion Status"
            android:textColor="@color/gray"
            android:padding="10dp"/>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/processBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="100"
            android:progress="10"
            android:progressDrawable="@drawable/progress_bar_custom"/>

        <TextView
            android:id="@+id/processBarValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textAlignment="center"
            android:layout_marginTop="8dp"/>

        <!-- Statistics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/rounded_background">

            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thời gian"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đoạn"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tvTimeTaken"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thời gian"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tvAvgSpeed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vận tốc"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tvSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bước"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- RecyclerView for Contests -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewContests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_race_statistics"
            android:paddingBottom="@dimen/_80sdp"
            android:clipToPadding="false"/>

        <!-- Close Button -->
        <Button
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@color/white"
            android:background="@drawable/background_radius_12sdp_light_green"
            android:layout_marginTop="16dp"
            android:padding="12dp"/>
    </LinearLayout>
</layout>
