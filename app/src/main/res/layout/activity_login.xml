<!--                        android:layout_width="40dp"-->
<!--                        android:layout_height="40dp"-->
<!--                        android:layout_margin="12dp"-->
<!--                        android:background="@drawable/github"/>-->
<!--                    <ImageView-->
<!--                        android:layout_width="40dp"-->
<!--                        android:layout_height="40dp"-->
<!--                        android:layout_margin="12dp"-->
<!--                        android:background="@drawable/twitter"/>-->
<!--                </LinearLayout>-->

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>
