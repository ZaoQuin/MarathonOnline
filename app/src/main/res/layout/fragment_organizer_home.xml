<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Phần tiêu đề -->
        <TextView
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chào,"
            android:textSize="@dimen/_20sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingTop="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/userFullNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quỳnh Giao"
            android:textSize="@dimen/_27sdp"
            android:textStyle="bold"
            android:textColor="@color/light_main_color"
            android:layout_marginBottom="@dimen/_10sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_radius_12sdp_light_green"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="@dimen/_5sdp"
            android:visibility="gone"
            android:id="@+id/contentLayout">

            <TextView
                android:id="@+id/empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Không có thông báo"
                android:gravity="center"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/notifies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_60sdp"
                android:clipToPadding="false" />

        </LinearLayout>

    </LinearLayout>
</layout>
